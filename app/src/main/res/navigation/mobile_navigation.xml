<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.netology.nework.ui.posts.PostsFragment"
        android:label="@string/title_posts"
        tools:layout="@layout/fragment_posts">
        <action
            android:id="@+id/action_navigation_home_to_navigation_auth"
            app:destination="@id/navigation_auth" />
        <action
            android:id="@+id/action_navigation_home_to_postsEditorFragment"
            app:destination="@id/postsEditorFragment" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_auth_reg"
            app:destination="@id/navigation_auth_reg" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ru.netology.nework.ui.events.EventsFragment"
        android:label="@string/title_events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ru.netology.nework.ui.users.UsersFragment"
        android:label="@string/title_users"
        tools:layout="@layout/fragment_users" />

    <fragment
        android:id="@+id/navigation_auth"
        android:name="ru.netology.nework.ui.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/postsEditorFragment"
        android:name="ru.netology.nework.ui.posts.PostsEditorFragment"
        android:label="NEW Post"
        tools:layout="@layout/fragment_posts_editor" />
    <fragment
        android:id="@+id/navigation_auth_reg"
        android:name="ru.netology.nework.ui.auth.AuthRegFragment"
        android:label="Registration"
        tools:layout="@layout/fragment_auth_reg"/>

</navigation>